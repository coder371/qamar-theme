{# Contact Form Widget #}

<section class="contact-section py-12 md:py-16">
  <div class="container mx-auto px-4">

    {# Header #}
    {% if widget.data.title %}
      <div class="text-center mb-10">
        {% if widget.data.subtitle %}
          <span class="text-primary text-sm font-medium mb-2 block">{{ widget.data.subtitle }}</span>
        {% endif %}
        <h1 class="text-2xl md:text-3xl font-bold">{{ widget.data.title }}</h1>
      </div>
    {% endif %}

    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-{{ '5' if widget.data.show_contact_info else '1' }} gap-8 md:gap-12">

        {# Contact Info #}
        {% if widget.data.show_contact_info %}
          <div class="md:col-span-2">
            <div class="bg-primary text-white rounded-2xl p-8 h-full">
              <h3 class="text-xl font-bold mb-6">{{t("contact.info_title")}}</h3>

              <div class="space-y-6">
                {% if widget.data.phone %}
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm opacity-75">{{t("contact.phone")}}</p>
                      <a href="tel:{{ widget.data.phone }}" class="font-medium hover:underline" dir="ltr">{{ widget.data.phone }}</a>
                    </div>
                  </div>
                {% endif %}

                {% if widget.data.email %}
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm opacity-75">{{t("contact.email")}}</p>
                      <a href="mailto:{{ widget.data.email }}" class="font-medium hover:underline">{{ widget.data.email }}</a>
                    </div>
                  </div>
                {% endif %}

                {% if widget.data.address %}
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm opacity-75">{{t("contact.address")}}</p>
                      <p class="font-medium">{{ widget.data.address }}</p>
                    </div>
                  </div>
                {% endif %}
              </div>

              {# Social Links #}
              <div class="mt-8 pt-8 border-t border-white/20">
                <p class="text-sm opacity-75 mb-4">{{t("contact.follow_us")}}</p>
                <div class="flex gap-3">
                  {% if store.social.instagram %}
                    <a href="{{ store.social.instagram }}" class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center hover:bg-white/30 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    </a>
                  {% endif %}
                  {% if store.social.twitter %}
                    <a href="{{ store.social.twitter }}" class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center hover:bg-white/30 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                      </svg>
                    </a>
                  {% endif %}
                  {% if store.social.whatsapp %}
                    <a href="https://wa.me/{{ store.social.whatsapp }}" class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center hover:bg-white/30 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                      </svg>
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endif %}

        {# Contact Form #}
        <div class="md:col-span-3">
          <div
            class="bg-white rounded-2xl shadow-sm p-8"
            x-data="{
              form: {
                name: '',
                email: '',
                phone: '',
                subject: '',
                message: ''
              },
              loading: false,
              success: false,
              error: '',

              async submit() {
                this.loading = true;
                this.error = '';

                try {
                  const response = await fetch('/api/contact', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(this.form)
                  });

                  if (response.ok) {
                    this.success = true;
                    this.form = { name: '', email: '', phone: '', subject: '', message: '' };
                  } else {
                    const data = await response.json();
                    this.error = data.message || '{{t('contact.error')}}';
                  }
                } catch (e) {
                  this.error = '{{t('contact.error')}}';
                }

                this.loading = false;
              }
            }">

            <form @submit.prevent="submit()" x-show="!success">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">{{t("contact.name")}} *</label>
                  <input
                    type="text"
                    x-model="form.name"
                    required
                    class="input w-full">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">{{t("contact.email")}} *</label>
                  <input
                    type="email"
                    x-model="form.email"
                    required
                    class="input w-full">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">{{t("contact.phone")}}</label>
                  <input
                    type="tel"
                    x-model="form.phone"
                    class="input w-full"
                    dir="ltr">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">{{t("contact.subject")}} *</label>
                  <input
                    type="text"
                    x-model="form.subject"
                    required
                    class="input w-full">
                </div>
                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-700 mb-2">{{t("contact.message")}} *</label>
                  <textarea
                    x-model="form.message"
                    required
                    rows="5"
                    class="input w-full resize-none"></textarea>
                </div>
              </div>

              <p x-show="error" x-text="error" class="text-red-500 text-sm mt-4"></p>

              <button
                type="submit"
                :disabled="loading"
                class="btn btn-primary btn-lg w-full mt-6">
                <span x-show="!loading">{{t("contact.send")}}</span>
                <span x-show="loading" class="loading-spinner w-5 h-5"></span>
              </button>
            </form>

            {# Success Message #}
            <div x-show="success" class="text-center py-8">
              <div class="w-16 h-16 mx-auto bg-green-100 rounded-full flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-800 mb-2">{{ widget.data.success_message | default('تم إرسال رسالتك بنجاح!') }}</h3>
              <p class="text-gray-500">{{t("contact.success_subtitle")}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
