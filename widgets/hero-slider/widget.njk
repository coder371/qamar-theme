{# Height classes based on setting #}
{% set heightClass = {
  'small': 'min-h-[400px]',
  'medium': 'min-h-[500px]',
  'large': 'min-h-[600px]',
  'full': 'min-h-screen'
}[widget.data.height] | default('min-h-[500px]') %}

<div
  class="hero-slider relative overflow-hidden {{ heightClass }}"
  x-data="{
    current: 0,
    slides: {{ widget.blocks | length }},
    autoplay: {{ widget.data.autoplay | default(true) | dump }},
    interval: {{ widget.data.interval | default(5) }} * 1000,
    timer: null,

    init() {
      if (this.autoplay && this.slides > 1) {
        this.startAutoplay();
      }
    },

    startAutoplay() {
      this.timer = setInterval(() => this.next(), this.interval);
    },

    stopAutoplay() {
      if (this.timer) clearInterval(this.timer);
    },

    next() {
      this.current = (this.current + 1) % this.slides;
    },

    prev() {
      this.current = (this.current - 1 + this.slides) % this.slides;
    },

    goTo(index) {
      this.current = index;
    }
  }"
  @mouseenter="stopAutoplay()"
  @mouseleave="autoplay && startAutoplay()">

  {# Slides #}
  <div class="relative w-full h-full">
    {% for block in widget.blocks %}
      {% set textAlign = {
        'start': 'items-start text-start',
        'center': 'items-center text-center',
        'end': 'items-end text-end'
      }[block.data.text_position] | default('items-center text-center') %}

      <div
        x-show="current === {{ loop.index0 }}"
        x-transition:enter="transition ease-out duration-500"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-300"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="absolute inset-0 flex {{ textAlign }} justify-center {{ heightClass }}">

        {# Background Image #}
        <div class="absolute inset-0">
          {% if block.data.image.fileUrl %}
            <picture>
              {% if block.data.mobile_image.fileUrl %}
                <source media="(max-width: 768px)" srcset="{{ block.data.mobile_image.fileUrl }}">
              {% endif %}
              <img
                src="{{ block.data.image.fileUrl }}"
                alt="{{ block.data.title }}"
                class="w-full h-full object-cover">
            </picture>
          {% else %}
            {# Placeholder gradient #}
            <div class="w-full h-full bg-gradient-to-br from-primary to-secondary"></div>
          {% endif %}

          {# Overlay #}
          <div
            class="absolute inset-0"
            style="background-color: {{ block.data.overlay_color | default('#000000') }}; opacity: {{ (block.data.overlay_opacity | default(30)) / 100 }}">
          </div>
        </div>

        {# Content #}
        <div class="relative z-10 container mx-auto px-4 py-12" style="color: {{ block.data.text_color | default('#FFFFFF') }}">
          <div class="max-w-2xl {% if block.data.text_position == 'center' %}mx-auto{% endif %}">
            {% if block.data.title %}
              <h2 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-4 slide-up">
                {{ block.data.title }}
              </h2>
            {% endif %}

            {% if block.data.subtitle %}
              <p class="text-lg md:text-xl mb-6 opacity-90 slide-up" style="animation-delay: 0.1s">
                {{ block.data.subtitle | safe }}
              </p>
            {% endif %}

            {% if block.data.button_text %}
              <a
                href="{{ block.data.button_url | default('/products') }}"
                class="inline-flex items-center gap-2 btn btn-lg bg-white text-gray-900 hover:bg-primary hover:text-white slide-up"
                style="animation-delay: 0.2s">
                {{ block.data.button_text }}
                <svg class="w-5 h-5 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% else %}
      {# Default slide if no blocks #}
      <div class="absolute inset-0 flex items-center justify-center {{ heightClass }} bg-gradient-to-br from-primary to-secondary">
        <div class="text-center text-white px-4">
          <h2 class="text-3xl md:text-5xl font-bold mb-4">{{t("hero.new_collection")}}</h2>
          <p class="text-lg md:text-xl mb-6 opacity-90">{{t("hero.discover")}}</p>
          <a href="/products" class="btn btn-lg bg-white text-gray-900 hover:bg-primary hover:text-white">
            {{t("hero.shop_now")}}
          </a>
        </div>
      </div>
    {% endfor %}
  </div>

  {# Navigation Arrows #}
  {% if widget.data.show_arrows and widget.blocks | length > 1 %}
    <button
      @click="prev()"
      class="absolute top-1/2 -translate-y-1/2 start-4 z-20 w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center text-white hover:bg-white hover:text-gray-900 transition-all"
      aria-label="Previous">
      <svg class="w-6 h-6 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </button>
    <button
      @click="next()"
      class="absolute top-1/2 -translate-y-1/2 end-4 z-20 w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center text-white hover:bg-white hover:text-gray-900 transition-all"
      aria-label="Next">
      <svg class="w-6 h-6 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </button>
  {% endif %}

  {# Dots #}
  {% if widget.data.show_dots and widget.blocks | length > 1 %}
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-20 flex gap-2">
      {% for block in widget.blocks %}
        <button
          @click="goTo({{ loop.index0 }})"
          :class="current === {{ loop.index0 }} ? 'bg-white w-8' : 'bg-white/50 w-3'"
          class="h-3 rounded-full transition-all duration-300"
          aria-label="Go to slide {{ loop.index }}">
        </button>
      {% endfor %}
    </div>
  {% endif %}
</div>
