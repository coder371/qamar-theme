{# Cart Page Widget #}

<div class="cart-page py-8" x-data="{
  couponCode: '',
  couponLoading: false,
  couponError: '',

  async applyCoupon() {
    if (!this.couponCode.trim()) return;
    this.couponLoading = true;
    this.couponError = '';
    const result = await Qumra.cart.applyCoupon(this.couponCode);
    if (!result || result.success === false) {
      this.couponError = result?.message || '{{t('cart.coupon_invalid')}}';
    }
    this.couponLoading = false;
  }
}">
  <div class="container mx-auto px-4">

    {# Page Title #}
    <h1 class="text-2xl md:text-3xl font-bold mb-8">{{t("cart.title")}}</h1>

    {% if cart.items and cart.items.length > 0 %}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        {# Cart Items #}
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-sm overflow-hidden">

            {# Desktop Table Header #}
            <div class="hidden md:grid grid-cols-12 gap-4 p-4 bg-gray-50 text-sm font-medium text-gray-500">
              <div class="col-span-6">{{t("common.products")}}</div>
              <div class="col-span-2 text-center">{{t("product.price")}}</div>
              <div class="col-span-2 text-center">{{t("product.quantity")}}</div>
              <div class="col-span-2 text-center">{{t("product.total")}}</div>
            </div>

            {# Cart Items #}
            <div class="divide-y">
              {% for item in cart.items %}
                <div class="p-4 grid grid-cols-1 md:grid-cols-12 gap-4 items-center" data-item-id="{{ item._id }}">

                  {# Product Info #}
                  <div class="md:col-span-6 flex gap-4">
                    {% if widget.data.show_product_image %}
                      <a href="/product/{{ item.product.slug }}" class="w-20 h-20 flex-shrink-0">
                        <img
                          src="{{ item.product.images[0].fileUrl | default('') }}"
                          alt="{{ item.product.title }}"
                          class="w-full h-full object-cover rounded-lg">
                      </a>
                    {% endif %}
                    <div class="flex-1 min-w-0">
                      <h3 class="font-medium text-gray-900 line-clamp-2">
                        <a href="/product/{{ item.product.slug }}" class="hover:text-primary">
                          {{ item.product.title }}
                        </a>
                      </h3>
                      {% if item.options %}
                        <p class="text-sm text-gray-500 mt-1">
                          {% for key, value in item.options %}
                            {{ key }}: {{ value }}{% if not loop.last %}, {% endif %}
                          {% endfor %}
                        </p>
                      {% endif %}
                      <button
                        @click="Qumra.cart.remove('{{ item._id }}')"
                        class="text-sm text-red-500 hover:underline mt-2 md:hidden">
                        {{t("cart.remove_item")}}
                      </button>
                    </div>
                  </div>

                  {# Price #}
                  <div class="md:col-span-2 text-center">
                    <span class="md:hidden text-sm text-gray-500">{{t("product.price")}}: </span>
                    <span class="font-medium" data-money="{{ item.price }}">{{ item.price | money }}</span>
                  </div>

                  {# Quantity #}
                  <div class="md:col-span-2 flex justify-center">
                    <div class="quantity-input">
                      <button @click="Qumra.cart.update('{{ item._id }}', {{ item.quantity - 1 }})" {% if item.quantity <= 1 %}disabled{% endif %}>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                        </svg>
                      </button>
                      <input
                        type="number"
                        value="{{ item.quantity }}"
                        min="1"
                        @change="Qumra.cart.update('{{ item._id }}', $event.target.value)"
                        class="text-center">
                      <button @click="Qumra.cart.update('{{ item._id }}', {{ item.quantity + 1 }})">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                      </button>
                    </div>
                  </div>

                  {# Total #}
                  <div class="md:col-span-2 flex items-center justify-between md:justify-center gap-4">
                    <span class="font-bold text-primary" data-money="{{ item.price * item.quantity }}">{{ (item.price * item.quantity) | money }}</span>
                    <button
                      @click="Qumra.cart.remove('{{ item._id }}')"
                      class="hidden md:block p-2 text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-lg transition-colors"
                      title="{{t('cart.remove_item')}}">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    </button>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>

          {# Continue Shopping #}
          <div class="mt-6">
            <a
              href="{{ widget.data.continue_shopping_url | default('/products') }}"
              class="inline-flex items-center gap-2 text-primary hover:underline">
              <svg class="w-5 h-5 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              {{t("cart.continue_shopping")}}
            </a>
          </div>
        </div>

        {# Order Summary #}
        <div class="lg:col-span-1">
          <div class="bg-white rounded-xl shadow-sm p-6 sticky top-24">
            <h2 class="text-lg font-bold mb-6">ملخص الطلب</h2>

            {# Coupon #}
            {% if widget.data.show_coupon %}
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">كود الخصم</label>
                <div class="flex gap-2">
                  <input
                    type="text"
                    x-model="couponCode"
                    placeholder="{{t('cart.coupon_placeholder')}}"
                    class="input flex-1"
                    :class="couponError ? 'input-error' : ''">
                  <button
                    @click="applyCoupon()"
                    :disabled="couponLoading"
                    class="btn btn-outline">
                    <span x-show="!couponLoading">{{t("cart.apply_coupon")}}</span>
                    <span x-show="couponLoading" class="loading-spinner w-4 h-4"></span>
                  </button>
                </div>
                <p x-show="couponError" x-text="couponError" class="text-sm text-red-500 mt-1"></p>
                {% if cart.coupon %}
                  <div class="flex items-center justify-between mt-2 p-2 bg-green-50 rounded-lg">
                    <span class="text-sm text-green-700">
                      <span class="font-medium">{{ cart.coupon.code }}</span> مطبق
                    </span>
                    <button @click="Qumra.cart.applyCoupon('')" class="text-sm text-red-500 hover:underline">
                      إزالة
                    </button>
                  </div>
                {% endif %}
              </div>
            {% endif %}

            {# Summary #}
            <div class="space-y-3 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-500">{{t("cart.subtotal")}}</span>
                <span class="font-medium" data-money="{{ cart.subtotalPrice }}">{{ cart.subtotalPrice | money }}</span>
              </div>

              {% if cart.discount %}
                <div class="flex justify-between text-green-600">
                  <span>{{t("cart.discount")}}</span>
                  <span data-money="{{ cart.discount }}">-{{ cart.discount | money }}</span>
                </div>
              {% endif %}

              {% if widget.data.show_shipping_estimate %}
                <div class="flex justify-between">
                  <span class="text-gray-500">{{t("cart.shipping")}}</span>
                  <span class="font-medium">
                    {% if cart.shippingPrice == 0 %}
                      {{t("cart.free_shipping")}}
                    {% else %}
                      <span data-money="{{ cart.shippingPrice }}">{{ cart.shippingPrice | money }}</span>
                    {% endif %}
                  </span>
                </div>
              {% endif %}

              <div class="border-t pt-3 mt-3">
                <div class="flex justify-between text-lg font-bold">
                  <span>{{t("cart.total")}}</span>
                  <span class="text-primary" data-money="{{ cart.totalPrice }}">{{ cart.totalPrice | money }}</span>
                </div>
              </div>
            </div>

            {# Checkout Button #}
            <a href="/checkout" class="btn btn-primary btn-lg w-full mt-6">
              {{t("cart.checkout")}}
              <svg class="w-5 h-5 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>

            {# Trust Badges #}
            <div class="mt-6 pt-6 border-t">
              <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                دفع آمن 100%
              </div>
              <div class="flex items-center gap-2 text-sm text-gray-500">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                </svg>
                شحن سريع وآمن
              </div>
            </div>
          </div>
        </div>
      </div>

    {% else %}
      {# Empty Cart #}
      <div class="max-w-md mx-auto text-center py-16">
        <svg class="w-32 h-32 mx-auto text-gray-300 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <h2 class="text-2xl font-bold text-gray-600 mb-2">{{t("cart.empty")}}</h2>
        <p class="text-gray-400 mb-8">{{t("cart.empty_message")}}</p>
        <a href="{{ widget.data.continue_shopping_url | default('/products') }}" class="btn btn-primary btn-lg">
          {{t("cart.continue_shopping")}}
        </a>
      </div>
    {% endif %}
  </div>
</div>
