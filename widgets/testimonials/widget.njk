{# Testimonials Widget #}

{% set blocks = blocks | default([]) %}
{% set gridCols = {
  '2': 'md:grid-cols-2',
  '3': 'md:grid-cols-3'
}[widget.data.columns] | default('md:grid-cols-3') %}

<section class="testimonials-section py-12 md:py-16 bg-gray-50">
  <div class="container mx-auto px-4">

    {# Section Header #}
    {% if widget.data.title %}
      <div class="text-center mb-10">
        {% if widget.data.subtitle %}
          <span class="text-primary text-sm font-medium mb-2 block">{{ widget.data.subtitle }}</span>
        {% endif %}
        <h2 class="text-2xl md:text-3xl font-bold">{{ widget.data.title }}</h2>
      </div>
    {% endif %}

    {% if blocks | length == 0 %}
      {# No testimonials to show #}
    {% elif widget.data.layout == 'slider' %}
      {# Slider Layout #}
      <div
        class="testimonials-slider relative"
        x-data="{
          currentSlide: 0,
          totalSlides: {{ blocks | length }},
          autoplay: {{ widget.data.autoplay | default(true) | lower }},
          interval: null,

          init() {
            if (this.autoplay) {
              this.interval = setInterval(() => this.next(), 5000);
            }
          },

          next() {
            this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
          },

          prev() {
            this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
          },

          goTo(index) {
            this.currentSlide = index;
            if (this.interval) {
              clearInterval(this.interval);
              this.interval = setInterval(() => this.next(), 5000);
            }
          }
        }">

        <div class="overflow-hidden">
          <div class="flex transition-transform duration-500" :style="'transform: translateX(' + (currentSlide * -100) + '%)'">
            {% for testimonial in blocks %}
              <div class="w-full flex-shrink-0 px-4">
                <div class="max-w-2xl mx-auto bg-white rounded-2xl p-8 shadow-sm text-center">
                  {# Rating Stars #}
                  <div class="flex justify-center gap-1 mb-4">
                    {% for i in range(0, testimonial.data.rating | default(5) | int) %}
                      <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    {% endfor %}
                  </div>

                  {# Content #}
                  <p class="text-lg text-gray-600 mb-6 leading-relaxed">{{ testimonial.data.content }}</p>

                  {# Author #}
                  <div class="flex items-center justify-center gap-4">
                    {% if testimonial.data.author_image %}
                      <img
                        src="{{ testimonial.data.author_image }}"
                        alt="{{ testimonial.data.author_name }}"
                        class="w-12 h-12 rounded-full object-cover">
                    {% else %}
                      <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold">
                        {{ testimonial.data.author_name | slice(0, 1) | upper }}
                      </div>
                    {% endif %}
                    <div class="text-start">
                      <h4 class="font-medium">{{ testimonial.data.author_name }}</h4>
                      {% if testimonial.data.author_title %}
                        <p class="text-sm text-gray-500">{{ testimonial.data.author_title }}</p>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        {# Navigation Dots #}
        {% if blocks | length > 1 %}
          <div class="flex justify-center gap-2 mt-6">
            {% for testimonial in blocks %}
              <button
                @click="goTo({{ loop.index0 }})"
                class="w-3 h-3 rounded-full transition-colors"
                :class="currentSlide === {{ loop.index0 }} ? 'bg-primary' : 'bg-gray-300'">
              </button>
            {% endfor %}
          </div>
        {% endif %}
      </div>

    {% else %}
      {# Grid Layout #}
      <div class="grid grid-cols-1 {{ gridCols }} gap-6">
        {% for testimonial in blocks %}
          <div class="bg-white rounded-2xl p-6 shadow-sm">
            {# Rating Stars #}
            <div class="flex gap-1 mb-4">
              {% for i in range(0, testimonial.data.rating | default(5) | int) %}
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {% endfor %}
            </div>

            {# Content #}
            <p class="text-gray-600 mb-6 leading-relaxed">{{ testimonial.data.content }}</p>

            {# Author #}
            <div class="flex items-center gap-3">
              {% if testimonial.data.author_image %}
                <img
                  src="{{ testimonial.data.author_image }}"
                  alt="{{ testimonial.data.author_name }}"
                  class="w-10 h-10 rounded-full object-cover">
              {% else %}
                <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold text-sm">
                  {{ testimonial.data.author_name | slice(0, 1) | upper }}
                </div>
              {% endif %}
              <div>
                <h4 class="font-medium text-sm">{{ testimonial.data.author_name }}</h4>
                {% if testimonial.data.author_title %}
                  <p class="text-xs text-gray-500">{{ testimonial.data.author_title }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>
