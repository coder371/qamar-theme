<div
  x-data="{ show: true }"
  x-show="show"
  x-transition:leave="transition ease-in duration-200"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
  class="relative py-2 px-4 text-center text-sm"
  style="background-color: {{ widget.data.background_color | default('#9C27B0') }}; color: {{ widget.data.text_color | default('#FFFFFF') }}">

  {% if widget.data.link_url %}
    <a href="{{ widget.data.link_url }}" class="hover:underline">
      {{ widget.data.text | default('شحن مجاني للطلبات فوق 200 ريال') | safe }}
    </a>
  {% else %}
    <span>{{ widget.data.text | default('شحن مجاني للطلبات فوق 200 ريال') | safe }}</span>
  {% endif %}

  {% if widget.data.show_close_button %}
    <button
      @click="show = false"
      class="absolute top-1/2 -translate-y-1/2 end-4 p-1 hover:opacity-70 transition-opacity"
      aria-label="{{t('common.close')}}">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  {% endif %}
</div>
