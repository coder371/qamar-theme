{{widget.data.products | json}}
{# Grid columns classes #}
{% set desktopCols = {
  '3': 'lg:grid-cols-3',
  '4': 'lg:grid-cols-4',
  '5': 'lg:grid-cols-5'
}[widget.data.columns_desktop] | default('lg:grid-cols-4') %}

{% set mobileCols = {
  '1': 'grid-cols-1',
  '2': 'grid-cols-2'
}[widget.data.columns_mobile] | default('grid-cols-2') %}

<section class="py-12 bg-surface">
  <div class="container mx-auto px-4">
    {# Section Header #}
    <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-8">
      <div>
        {% if widget.data.title %}
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
            {{ widget.data.title }}
          </h2>
        {% endif %}
        {% if widget.data.subtitle %}
          <p class="text-gray-500">
            {{ widget.data.subtitle }}
          </p>
        {% endif %}
      </div>

      {% if widget.data.show_view_all %}
        <a
          href="{{ widget.data.view_all_url | default('/products') }}"
          class="mt-4 md:mt-0 inline-flex items-center gap-2 text-primary hover:text-primary-dark font-medium">
          {{t("common.view_all")}}
          <svg class="w-5 h-5 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      {% endif %}
    </div>

    {# Products Grid #}
    <div class="grid {{ mobileCols }} md:grid-cols-3 {{ desktopCols }} gap-4 md:gap-6">
      {% if widget.data.products and widget.data.products.length %}
        {% for product in widget.data.products %}
          {% if loop.index <= (widget.data.products_count | default(8)) %}
            {% ui "product-card.njk", product=product %}
          {% endif %}
        {% endfor %}
      {% else %}
        {# Placeholder products if no products selected #}
        {% for i in range(1, (widget.data.products_count | default(8)) + 1) %}
          <div class="product-card">
            <div class="product-image bg-gray-200 animate-pulse">
              <div class="aspect-square"></div>
            </div>
            <div class="p-4">
              <div class="h-4 bg-gray-200 rounded mb-2 animate-pulse"></div>
              <div class="h-4 bg-gray-200 rounded w-2/3 animate-pulse"></div>
              <div class="h-6 bg-gray-200 rounded w-1/3 mt-3 animate-pulse"></div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>
